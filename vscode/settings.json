{
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "afterDelay",
    "C_Cpp.default.compilerPath": "c:\\Users\\saku\\Downloads\\project\\src\\config_reset.cpp",
    "python.createEnvironment.trigger": "off",
    "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
    "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose"

    {
    // Установить собственный шрифт и его размеры
    "editor.fontFamily": "'JetBrains Mono', 'bold', bold",
    "editor.fontSize": 24,

    // Установить иконки и настроить их
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.tree.indent": 14,

    // Установить тему по дефолту
    "workbench.colorTheme": "Kanagawa Wave",    

    // Отсчет строчки относительно текущего курсора
    "editor.lineNumbers": "relative",

    // Запрашивать подтверждение на удаление и Drag&Drop
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,

    // Настройка excalidraw по дефолту
    "excalidraw.workspaceLibraryPath": ".",
    "excalidraw.theme": "dark",

    // Убираем виджет справа для скролла
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.minimap.enabled": false,
    "editor.matchBrackets": "never",
    "editor.occurrencesHighlight": "off",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.stickyScroll.enabled": false,

    "workbench.colorCustomizations": {
        "editorCursor.background": "#000000",
        "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
        "editorOverviewRuler.selectionHighlightForeground": "#0000",
        "editorOverviewRuler.rangeHighlightForeground": "#0000",
        "editorOverviewRuler.wordHighlightForeground": "#0000",
        "editorOverviewRuler.bracketMatchForeground": "#0000",
        "editorOverviewRuler.findMatchForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",
        "editorOverviewRuler.warningForeground": "#0000",
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.errorForeground": "#0000",
        "editorOverviewRuler.infoForeground": "#0000",
        "editorOverviewRuler.border": "#0000",
        },
    // Убрать статус бар снизу
    "workbench.statusBar.visible": false,

    // Настройка drawio
    "hediet.vscode-drawio.resizeImages": null,

    // Не показывать все открытые вкладки
    "workbench.editor.showTabs": "single",

    // Установить дефолтный размер для редактора
    "window.zoomLevel": 2,

    // Настройка курсора
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",

    // Отключаем панель управления окном
    "chat.commandCenter.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.customTitleBarVisibility": "never",
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "toggle",

    // Отключаем лишние декорации и метки
    "explorer.decorations.badges": false,
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",

    // Настройка плагина todo
    "todohighlight.isEnable": true,

    // По дефолту открывать пустую страницу
    "workbench.startupEditor": "none",

    // Отключить вывод сигнатуры функции
    "editor.parameterHints.enabled": false,
    "editor.hover.enabled": false,
    "files.trimTrailingWhitespace": false,
    "editor.links": false,

    // Установить длину одного tab
    "editor.tabSize": 4,

    // Добавлять одну пустую строку в конец файла чтобы избежать ошибоки
    "files.insertFinalNewline": true,

    // Отключаем окно с помощью для новичков
    "workbench.tips.enabled": false,

    // Отключаем прилипание заголовка в деревьях
    "workbench.tree.enableStickyScroll": false,

    // Убирает вертикальные линии отступов в дереве файлов
    "workbench.tree.renderIndentGuides": "none",

    // Всегда использовать те отступы, которые заданы вручную (tabSize, insertSpaces и т.п.), а не угадывать.
    "editor.detectIndentation": false,
    
    // Убрать значок для сворачивания кода
    "editor.showFoldingControls": "never",

    // Отключает вертикальные линии отступов в редакторе
    "editor.guides.indentation": false,
    
    // Не показывает пробелы, табы, перевод строки и т.п. символы в редакторе
    "editor.renderWhitespace": "none",

    // Отключает подсветку активной строки
    "editor.renderLineHighlight": "none",

    // Автосохранение файлов через короткую паузу после редактирования
    "files.autoSave": "afterDelay",

    // Отключает автообновления VS Code
    "update.mode": "none",

    // Отключает всплывающие предложения установить расширения
    "extensions.ignoreRecommendations": true,

    //Устанавливает плавные анимации
    "editor.smoothScrolling": "True",
    "editor.cursorSmoothCaretAnimation": "On",
    "terminal.integrated.smoothScrolling": "True",
    "workbench.list.smoothScrolling": "True",


}


}
